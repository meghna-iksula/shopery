<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.main">
            <block class="Magento\Framework\View\Element\Template" name="brand.social.links" template="Magento_Theme::html/brand-social-links.phtml" />
        </referenceBlock>
        <referenceBlock name="product.reviews.wrapper">
            <arguments>
                <argument name="title" translate="true" xsi:type="string">Customer Feedback</argument>
            </arguments>
        </referenceBlock> 
        <move element="page.main.title" destination="product.info.main" before="-"/>
        <move element="product.info.type" destination="product.info.main" after="page.main.title"/>
        <move element="product.info.review" destination="product.info.price" before="-"/>
   `    <move element="product.info.sku" destination="product.info.price" after="product.info.review" />
        <move element="brand.social.links" destination="product.info.main" before="product.info.overview" />
        <move element="product.info.overview" destination="product.info.main" after="product.info.price"/>
        <move element="view.addto.wishlist" destination="product.info.addtocart" after="-"/>
    </body>
</page>