<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_width" xsi:type="number">170</argument>
            </arguments>
        </referenceBlock>
        
        <!-- Header -->
        <referenceContainer name="header.container">
            <container name="headerWrapper" htmlClass="headerWrapper" htmlTag="div">
                <container name="headerdetailswrapper" htmlClass="headerdetailswrapper"
                    htmlTag="div">
                    <block class="Magento\Framework\View\Element\Template" name="location"
                        before="-" template="Magento_Theme::html/location.phtml" />
                    <container name="elements-wrapper" htmlTag="div" htmlClass="elements-wrapper">
                    </container>
                </container>
                <container name="bottomHeaderwrapper" htmlClass="bottomHeaderwrapper" htmlTag="div">
                    <container name="bottomHeadercontent" htmlClass="bottomHeadercontent"
                        htmlTag="div">
                        <container name="searchcontainer" htmlTag="div" htmlClass="searchcontainer" />
                        <container name="rightdetailwrapper" htmlTag="div"
                            htmlClass="rightdetailwrapper">
                            <block class="Magento\Framework\View\Element\Template" name="wishlistLink"
                         template="Magento_Theme::html/wishlistLink.phtml" />
                            </container>
                    </container>
                </container>
            </container>
        </referenceContainer>
        <move element="logo" destination="bottomHeadercontent" before="-" />
        <move element="top.search" destination="searchcontainer" after="logo" />
        <move element="minicart" destination="rightdetailwrapper" after="wishlistLink" />
        <move element="currency" destination="elements-wrapper" before="-" />
        <move element="store_language" destination="elements-wrapper" after="currency" />
        <move element="authorization-link" destination="elements-wrapper" after="store_language" />

        <!-- Navigation-Menu -->
        <referenceContainer name="page.top">
            <referenceBlock name="navigation-sections">
                <referenceBlock name="store.menu">
                    <referenceBlock name="catalog.topnav">
                        <container name="contact-nav-link" htmlClass="contact-link-wrapper" htmlTag="div">
                            <block class="Magento\Framework\View\Element\Template" name="contact-link-block" template="Magento_Theme::html/contact-nav-link.phtml" />
                        </container>
                    </referenceBlock>
                </referenceBlock>
            </referenceBlock>
        </referenceContainer>

        <!-- Footer -->
        <referenceContainer name="footer">
            <container name="footer-top-wrapper" htmlTag="div" htmlClass="footer-top-wrapper">
                <block class="Magento\Framework\View\Element\Template" name="subscribe.letter" template="Magento_Theme::html/subscribe-letter.phtml" />
                <block class="Magento\Framework\View\Element\Template" name="social.media.links" template="Magento_Theme::html/social-media-links.phtml" />
            </container>
            <container name="footerwrapper" htmlTag="div" /> 
        </referenceContainer>

        <move element="absolute_footer" destination="footerwrapper" after="-"/>
        <move element="form.subscribe" destination="footer-top-wrapper" after="subscribe.letter"/>
        <referenceBlock name="my-account-link" remove="true" />
        <referenceBlock name="register-link" remove="true" />
        <referenceBlock name="header" remove="true" />
        <referenceBlock name="currency" remove="false" />
        <referenceBlock name="store_language" remove="false"/>
        <referenceBlock name="footer_links" remove="true" />
        <referenceBlock name="copyright" remove="true" />
        <referenceBlock name="report.bugs" remove="true" />
        <referenceBlock name="store_switcher" remove="true" />
    </body>
</page>