<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_width" xsi:type="number">170</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="header.container">
            <container name="headerWrapper" htmlClass="headerWrapper" htmlTag="div">
                <container name="headerdetailswrapper" htmlClass="headerdetailswrapper"
                    htmlTag="div">
                    <block class="Magento\Framework\View\Element\Template" name="location"
                        before="-" template="Magento_Theme::html/location.phtml" />
                    <container name="elements-wrapper" htmlTag="div" htmlClass="elements-wrapper">
                    </container>
                </container>
                <container name="bottomHeaderwrapper" htmlClass="bottomHeaderwrapper" htmlTag="div">
                    <container name="bottomHeadercontent" htmlClass="bottomHeadercontent"
                        htmlTag="div">
                        <container name="searchcontainer" htmlTag="div" htmlClass="searchcontainer" />
                        <container name="rightdetailwrapper" htmlTag="div"
                            htmlClass="rightdetailwrapper">
                            <block class="Magento\Framework\View\Element\Template" name="wishlistLink"
                         template="Magento_Theme::html/wishlistLink.phtml" />
                            </container>
                    </container>
                </container>
            </container>
        </referenceContainer>

        <move element="logo" destination="bottomHeadercontent" before="-" />
        <move element="top.search" destination="searchcontainer" after="logo" />
        <move element="minicart" destination="rightdetailwrapper" after="wishlistLink" />
        <move element="currency" destination="elements-wrapper" before="-" />
        <move element="authorization-link" destination="elements-wrapper" after="currency" />
        <referenceBlock name="my-account-link" remove="true" />
        <referenceBlock name="register-link" remove="true" />
        <referenceBlock name="header" remove="true" />
        <referenceBlock name="currency" remove="false" />
        <referenceBlock name="store-language" remove="false"/>
    </body>
</page>